{
  "manifest_version": 3,
  "name": "选中内容格式化",
  "version": "1.0",
  "description": "选中网页文本，右键菜单显示格式化后的内容浮层。",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ]
}